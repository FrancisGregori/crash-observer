{
  "manifest_version": 2,
  "name": "Bet365 Observer",
  "version": "1.1",
  "description": "Observa dados do Aviator e envia para o dashboard",
  "icons": {
    "48": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "alarms",
    "*://*.bet365.bet.br/*",
    "*://*.bet365.com/*",
    "*://*.spribe.co/*",
    "*://*.spribegaming.com/*",
    "*://aviator-next.spribegaming.com/*",
    "*://sg.spribegaming.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bet365.bet.br/*",
        "*://*.bet365.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.spribe.co/*",
        "*://*.spribegaming.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.svg",
    "default_popup": "popup.html",
    "default_title": "Bet365 Observer"
  }
}
